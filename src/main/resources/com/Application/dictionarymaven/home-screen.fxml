<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="616.0" prefWidth="964.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Application.Controller.InitialController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Pane prefHeight="616.0" prefWidth="964.0">
            <children>
                <Pane layoutY="-17.0" prefHeight="53.0" prefWidth="924.0" style="-fx-background-color: #ababab;">
                    <children>
                        <TextField fx:id="searchField" layoutX="6.0" layoutY="8.0" onAction="#searchWord" prefHeight="36.0" prefWidth="308.0" promptText="Search" />

                        <Button fx:id="previousBtn" layoutX="330.0" layoutY="8.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="80.0" text="Previous" />

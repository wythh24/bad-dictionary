                        <ComboBox fx:id="listRecent" layoutX="758.0" layoutY="8.0" prefHeight="36.0" prefWidth="160.0" promptText="Recent" />
                    </children>
                </Pane>
                <Pane layoutY="35.0" prefHeight="543.0" prefWidth="315.0" style="-fx-background-color: blue;">
                    <children>
                        <ListView fx:id="wordList" prefHeight="543.0" prefWidth="315.0" />
                    </children>
                </Pane>
                <Pane fx:id="detailPanel" layoutX="315.0" layoutY="35.0" prefHeight="543.0" prefWidth="608.0" style="-fx-background-color: red;">
                    <children>
                        <ListView fx:id="detailList" prefHeight="543.0" prefWidth="608.0" />
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</VBox>
